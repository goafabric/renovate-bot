{
  "repositories": [
    "goafabric/core-fe",
    "goafabric/callee-service",
    "goafabric/person-service",

    "goafabric/core-service",
    "goafabric/catalog-batch-service",
    "goafabric/event-dispatcher-service",
    "goafabric/invoice-process",

    "goafabric/callee-service-quarkus",
    "goafabric/person-service-quarkus"
  ],
  "baseBranches": [
    "develop"
  ],
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": false,

  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "enabledManagers": ["gradle","github-actions","npm"],
  "ignoreTests": false,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "branch",
      "groupName": "all-updates"
    },
    {
      "matchManagers": ["github-actions"],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "branch",
      "groupName": "github-updates"
    },
    {
      "matchPackageNames": ["typescript"],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "branch",
      "groupName": "all-updates"
    }
  ]
}