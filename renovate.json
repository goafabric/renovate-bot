{
  "repositories": [
    "goafabric/callee-service",
    "goafabric/person-service"
  ],
  "baseBranches": [
    "refactoring"
  ],
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,

  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "enabledManagers": ["gradle"],
  "ignoreTests": false,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "branch",
      "groupName": "all-updates"
    }
  ]
}